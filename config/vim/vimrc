" Highlight after 80 columns
highlight OverLength ctermbg=red ctermfg=white guibg=#592929
match OverLength /\%81v.\+/

colorscheme desert

set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
set nocompatible

set number
set ruler
syntax on

" Mouse click
set mouse=a

" Set encoding
set encoding=utf-8

" Whitespace stuff
set nowrap
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set list listchars=tab:\ \ ,trail:Â·
set list

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

" Tab completion
set wildmode=list:longest,list:full

" Status bar
set laststatus=2

" make uses real tabs
au FileType make set noexpandtab
" 4 spaces for python
au Filetype python set shiftwidth=4 tabstop=4 softtabstop=4


" add json syntax highlighting
au BufNewFile,BufRead *.json set ft=javascript
" add gremlin syntax highlighting
au BufNewFile,BufRead *.gremlin set filetype=groovy

" allow backspacing over everything in insert mode
set backspace=indent,eol,start

" load the plugin and indent settings for the detected filetype
" filetype indent plugin on
set autoindent
set cindent

" Opens an edit command with the path of the currently edited file filled in
" Normal mode: <Leader>e
map <Leader>e :e <C-R>=expand("%:p:h") . "/" <CR>
map <Leader>v :vsplit <C-R>=expand("%:p:h") . "/" <CR>
map <Leader>s :split <C-R>=expand("%:p:h") . "/" <CR>
map <Leader>r :r <C-R>=expand("%:p:h") . "/" <CR>

" Set nopaste
map <Leader>n :set nopaste<cr>
map <Leader>p :set paste<cr>
" make the search highlight disappear after \<space>
map <leader><space> :noh<cr>

" Enable syntastic syntax checking
let g:syntastic_enable_signs=1
let g:syntastic_quiet_warnings=1

" Directories for swp files
set backupdir=~/.vim/backup
set directory=~/.vim/backup

" Show (partial) command in the status line
set showcmd

set guioptions=aAce
set guifont=Consolas:h13

set wrap
set linebreak
set textwidth=0
set wrapmargin=0
set fo-=t

nmap <leader>t :NERDTree<cr>

" Turn off sounds
set vb

" Highlight color
hi Search cterm=NONE ctermfg=grey ctermbg=blue
hi Search guibg=peru guifg=wheat

set t_Co=256
set colorcolumn=81
highlight ColorColumn ctermbg=236

